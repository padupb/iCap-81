import { useState, useEffect } from "react";
import { useQuery, useMutation, useQueryClient } from "@tanstack/react-query";
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Button } from "@/components/ui/button";
import { Badge } from "@/components/ui/badge";
import { Input } from "@/components/ui/input";
import { Label } from "@/components/ui/label";
import { Select, SelectContent, SelectItem, SelectTrigger, SelectValue } from "@/components/ui/select";
import { Dialog, DialogContent, DialogHeader, DialogTitle, DialogTrigger } from "@/components/ui/dialog";
import { Form, FormControl, FormField, FormItem, FormLabel, FormMessage } from "@/components/ui/form";
import { useForm } from "react-hook-form";
import { zodResolver } from "@hookform/resolvers/zod";
import { toast } from "@/hooks/use-toast";
import { useAuthorization } from "@/context/AuthorizationContext";
import { useAuth } from "@/context/AuthContext";
import {
  Table,
  TableBody,
  TableCell,
  TableHead,
  TableHeader,
  TableRow,
} from "@/components/ui/table";
import { 
  Plus, 
  Search, 
  Filter, 
  AlertTriangle
} from "lucide-react";
import { getStatusColor, formatDate } from "@/lib/utils";
import { apiRequest } from "@/lib/queryClient";
import { insertOrderSchema, type Order, type Product, type Company, type PurchaseOrder } from "@shared/schema";
import { z } from "zod";
import { OrderDetailDrawer } from "@/components/OrderDetailDrawer";

// Tipo para as ordens de compra que retornam do backend (API)
type PurchaseOrderResponse = {
  id: number;
  numero_ordem: string;
  empresa_id: number;
  obra_id: number | null;
  usuario_id: number;
  valido_ate: string;
  data_criacao: string;
  status: string;
  valor_total: number;
  empresa_nome: string;
};

// Tipo para os itens de uma ordem de compra
type PurchaseOrderItem = {
  id: number;
  ordem_compra_id: number;
  produto_id: number;
  quantidade: string;
  produto_nome: string;
  unidade_abreviacao: string;
};

// Tipo para o saldo de produto em uma ordem de compra
type ProductBalance = {
  sucesso: boolean;
  ordem_id: number;
  produto_id: number;
  quantidade_total: number;
  quantidade_usada: number;
  saldo_disponivel: number;
};

// Schema do formulário de pedidos com os campos essenciais
const orderFormSchema = z.object({
  purchaseOrderId: z.number({ required_error: "Selecione uma ordem de compra" }),
  productId: z.number({ required_error: "Selecione um produto" }),
  quantity: z.string()
    .min(1, "Informe a quantidade")
    .refine(val => !isNaN(parseFloat(val)) && parseFloat(val) > 0, {
      message: "Quantidade deve ser maior que zero"
    }),
  deliveryDate: z.string({ required_error: "Informe a data de entrega" }),
});

type OrderFormData = z.infer<typeof orderFormSchema>;

export default function Orders() {
  const [isCreateDialogOpen, setIsCreateDialogOpen] = useState(false);
  const [selectedOrder, setSelectedOrder] = useState<Order | null>(null);
  const [statusFilter, setStatusFilter] = useState<string>("all");
  const [searchTerm, setSearchTerm] = useState("");
  
  // Sistema de autorização para controlar cadastro
  const { canView, canEdit, canCreate } = useAuthorization();

  const queryClient = useQueryClient();

  // Buscar pedidos
  const { data: orders = [], isLoading } = useQuery<Order[]>({
    queryKey: ["/api/orders"],
  });

  // Buscar produtos (usados na tabela)
  const { data: products = [] } = useQuery<Product[]>({
    queryKey: ["/api/products"],
  });

  // Buscar empresas (usados na tabela)
  const { data: companies = [] } = useQuery<Company[]>({
    queryKey: ["/api/companies"],
  });

  // Obter informações do usuário logado para filtrar ordens de compra pela empresa
  const { user } = useAuth();
  
  // Buscar ordens de compra ativas e válidas para a empresa do usuário
  const { data: purchaseOrders = [], isLoading: isLoadingPurchaseOrders } = useQuery<PurchaseOrderResponse[]>({
    queryKey: ["/api/ordens-compra", user?.companyId],
    queryFn: async () => {
      // Montar URL com parâmetros de filtro para ordens ativas, válidas e da empresa do usuário
      const url = `/api/ordens-compra?status=Ativo&apenasValidas=true${user?.companyId ? `&empresaId=${user.companyId}` : ''}`;
      const response = await fetch(url);
      if (!response.ok) {
        throw new Error('Falha ao carregar ordens de compra');
      }
      return response.json();
    },
    // Só executar a consulta se o usuário estiver autenticado
    enabled: !!user,
  });

  // Mutação para criar um novo pedido
  const createOrderMutation = useMutation({
    mutationFn: async (data: any) => {
      const orderData = {
        ...data,
        deliveryDate: new Date(data.deliveryDate).toISOString(),
        userId: user?.id || 1,
      };
      console.log("Creating order:", orderData);
      return apiRequest("POST", "/api/orders", orderData);
    },
    onSuccess: () => {
      queryClient.invalidateQueries({ queryKey: ["/api/orders"] });
      setIsCreateDialogOpen(false);
      toast({
        title: "Sucesso",
        description: "Pedido criado com sucesso",
      });
    },
    onError: () => {
      toast({
        title: "Erro",
        description: "Erro ao criar pedido",
        variant: "destructive",
      });
    },
  });

  // Estados para controle do formulário de pedidos
  const [selectedOrderItems, setSelectedOrderItems] = useState<PurchaseOrderItem[]>([]);
  const [productBalance, setProductBalance] = useState<ProductBalance | null>(null);
  const [quantityError, setQuantityError] = useState<string>("");
  const [selectedPurchaseOrder, setSelectedPurchaseOrder] = useState<PurchaseOrderResponse | null>(null);
  
  // Inicialização do formulário
  const form = useForm<OrderFormData>({
    resolver: zodResolver(orderFormSchema),
    defaultValues: {
      purchaseOrderId: 0,
      productId: 0,
      quantity: "",
      deliveryDate: new Date().toISOString().split("T")[0]
    },
  });

  // Reset do formulário quando o diálogo é fechado
  useEffect(() => {
    if (!isCreateDialogOpen) {
      form.reset({
        purchaseOrderId: 0,
        productId: 0,
        quantity: "",
        deliveryDate: new Date().toISOString().split("T")[0]
      });
      setSelectedOrderItems([]);
      setProductBalance(null);
      setQuantityError("");
      setSelectedPurchaseOrder(null);
    }
  }, [isCreateDialogOpen, form]);

  // Observar mudanças na ordem de compra selecionada
  const selectedPurchaseOrderId = form.watch("purchaseOrderId");
  
  // Quando uma ordem de compra é selecionada, buscar seus detalhes e itens
  useEffect(() => {
    if (selectedPurchaseOrderId && selectedPurchaseOrderId > 0) {
      const order = purchaseOrders.find(o => o.id === selectedPurchaseOrderId) || null;
      setSelectedPurchaseOrder(order);
      
      // Resetar a seleção de produto
      form.setValue("productId", 0);
      setProductBalance(null);
      
      // Buscar os itens da ordem de compra
      fetch(`/api/ordem-compra/${selectedPurchaseOrderId}/itens`)
        .then(res => res.json())
        .then(data => {
          setSelectedOrderItems(data);
        })
        .catch(err => {
          console.error("Erro ao buscar itens da ordem:", err);
          setSelectedOrderItems([]);
        });
    } else {
      setSelectedPurchaseOrder(null);
      setSelectedOrderItems([]);
    }
  }, [selectedPurchaseOrderId, purchaseOrders, form]);
  
  // Observar mudanças no produto selecionado
  const selectedProductId = form.watch("productId");
  
  // Quando um produto é selecionado, buscar seu saldo disponível
  useEffect(() => {
    if (selectedPurchaseOrderId && selectedPurchaseOrderId > 0 && selectedProductId && selectedProductId > 0) {
      fetch(`/api/ordens-compra/${selectedPurchaseOrderId}/produtos/${selectedProductId}/saldo`)
        .then(res => res.json())
        .then(data => {
          setProductBalance(data);
          form.setValue("quantity", "");
        })
        .catch(err => {
          console.error("Erro ao buscar saldo do produto:", err);
          setProductBalance(null);
        });
    } else {
      setProductBalance(null);
    }
  }, [selectedPurchaseOrderId, selectedProductId, form]);
  
  // Verificar se a quantidade está dentro do saldo disponível
  const quantityValue = form.watch("quantity");
  
  useEffect(() => {
    if (productBalance && quantityValue) {
      const qty = parseFloat(quantityValue);
      if (!isNaN(qty) && qty > productBalance.saldo_disponivel) {
        setQuantityError(`Quantidade excede o saldo disponível (${productBalance.saldo_disponivel})`);
      } else {
        setQuantityError("");
      }
    } else {
      setQuantityError("");
    }
  }, [quantityValue, productBalance]);
  
  // Função para validar e enviar o formulário
  const onSubmit = (data: OrderFormData) => {
    // Verificar se há erro na quantidade antes de enviar
    if (quantityError) {
      toast({
        variant: "destructive",
        title: "Erro na quantidade",
        description: quantityError
      });
      return;
    }
    
    // Buscar informações da ordem de compra selecionada
    const purchaseOrder = purchaseOrders.find(po => po.id === data.purchaseOrderId);
    
    if (!purchaseOrder) {
      toast({
        variant: "destructive",
        title: "Erro",
        description: "Ordem de compra não encontrada"
      });
      return;
    }
    
    // Adicionar informações complementares ao pedido
    const orderData = {
      productId: data.productId,
      quantity: data.quantity,
      deliveryDate: data.deliveryDate,
      purchaseOrderId: data.purchaseOrderId,
      supplierId: purchaseOrder.empresa_id,
      workLocation: "Conforme ordem de compra", // Local de entrega vem da ordem de compra
      isUrgent: false
    };
    
    // Enviar o pedido
    createOrderMutation.mutate(orderData);
  };
  
  // Filtrar pedidos
  const filteredOrders = orders.filter(order => {
    const matchesStatus = statusFilter === "all" || order.status === statusFilter;
    const matchesSearch = order.orderId.toLowerCase().includes(searchTerm.toLowerCase()) ||
                         order.workLocation.toLowerCase().includes(searchTerm.toLowerCase());
    return matchesStatus && matchesSearch;
  });

  // Lista de status possíveis para filtros
  const statusOptions = [
    "Criado",
    "Em Aprovação", 
    "Aprovado",
    "Em Trânsito",
    "Concluído",
    "Cancelado"
  ];

  return (
    <div className="space-y-6">
      {/* Actions */}
      <div className="flex justify-end">
        {canCreate("orders") && (
          <Dialog open={isCreateDialogOpen} onOpenChange={setIsCreateDialogOpen}>
            <DialogTrigger asChild>
              <Button className="bg-primary hover:bg-primary/90">
                <Plus className="mr-2" size={16} />
                Novo Pedido
              </Button>
            </DialogTrigger>
            <DialogContent className="max-w-2xl">
              <DialogHeader>
                <DialogTitle>Criar Novo Pedido</DialogTitle>
              </DialogHeader>
              
              <Form {...form}>
                <form onSubmit={form.handleSubmit(onSubmit)} className="space-y-6">
                  {/* Primeira linha - Ordem de Compra */}
                  <div className="grid grid-cols-1 gap-6">
                    <FormField
                      control={form.control}
                      name="purchaseOrderId"
                      render={({ field }) => (
                        <FormItem>
                          <FormLabel>Ordem de Compra</FormLabel>
                          <Select 
                            onValueChange={(value) => field.onChange(parseInt(value))}
                            value={field.value > 0 ? field.value.toString() : ""}
                          >
                            <FormControl>
                              <SelectTrigger className="bg-input border-border">
                                <SelectValue placeholder="Selecione uma ordem de compra" />
                              </SelectTrigger>
                            </FormControl>
                            <SelectContent>
                              {purchaseOrders
                                .filter(po => po.status === "Ativo")
                                .map((po) => (
                                  <SelectItem key={po.id} value={po.id.toString()}>
                                    {po.numero_ordem} - {po.empresa_nome}
                                  </SelectItem>
                                ))}
                            </SelectContent>
                          </Select>
                          <FormMessage />
                        </FormItem>
                      )}
                    />
                  </div>
                  
                  {/* Detalhes da Ordem de Compra quando selecionada */}
                  {selectedPurchaseOrder && (
                    <div className="p-4 rounded-md bg-muted/50 border border-border">
                      <h3 className="text-sm font-medium mb-2">Detalhes da Ordem de Compra</h3>
                      <div className="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm">
                        <div>
                          <span className="font-medium">Número:</span> {selectedPurchaseOrder.numero_ordem}
                        </div>
                        <div>
                          <span className="font-medium">Fornecedor:</span> {selectedPurchaseOrder.empresa_nome}
                        </div>
                        <div>
                          <span className="font-medium">Válido até:</span> {formatDate(new Date(selectedPurchaseOrder.valido_ate))}
                        </div>
                        <div>
                          <span className="font-medium">Status:</span>{" "}
                          <Badge className={getStatusColor(selectedPurchaseOrder.status)}>
                            {selectedPurchaseOrder.status}
                          </Badge>
                        </div>
                      </div>
                    </div>
                  )}
                  
                  {/* Segunda linha - Produto e Quantidade */}
                  <div className="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <FormField
                      control={form.control}
                      name="productId"
                      render={({ field }) => (
                        <FormItem>
                          <FormLabel>Produto</FormLabel>
                          <Select 
                            onValueChange={(value) => field.onChange(parseInt(value))}
                            value={field.value > 0 ? field.value.toString() : ""}
                            disabled={!selectedPurchaseOrderId || selectedPurchaseOrderId === 0}
                          >
                            <FormControl>
                              <SelectTrigger className="bg-input border-border">
                                <SelectValue placeholder="Selecione um produto" />
                              </SelectTrigger>
                            </FormControl>
                            <SelectContent>
                              {selectedOrderItems.map((item) => (
                                <SelectItem key={item.produto_id} value={item.produto_id.toString()}>
                                  {item.produto_nome} ({item.unidade_abreviacao})
                                </SelectItem>
                              ))}
                            </SelectContent>
                          </Select>
                          <FormMessage />
                        </FormItem>
                      )}
                    />

                    <FormField
                      control={form.control}
                      name="quantity"
                      render={({ field }) => (
                        <FormItem>
                          <FormLabel>Quantidade</FormLabel>
                          <FormControl>
                            <Input
                              type="number"
                              placeholder="Ex: 100"
                              min="0.01" 
                              step="0.01"
                              className={`bg-input border-border ${quantityError ? "border-destructive" : ""}`}
                              disabled={!selectedProductId || selectedProductId === 0}
                              {...field}
                            />
                          </FormControl>
                          {productBalance && (
                            <div className="text-xs mt-1">
                              <span className="font-medium">Saldo disponível:</span> {productBalance.saldo_disponivel}
                            </div>
                          )}
                          {quantityError && (
                            <div className="text-xs text-destructive mt-1">{quantityError}</div>
                          )}
                          <FormMessage />
                        </FormItem>
                      )}
                    />
                  </div>

                  {/* Data de Entrega */}
                  <div className="grid grid-cols-1 gap-6">
                    <FormField
                      control={form.control}
                      name="deliveryDate"
                      render={({ field }) => (
                        <FormItem>
                          <FormLabel>Data de Entrega</FormLabel>
                          <FormControl>
                            <Input
                              type="date"
                              className="bg-input border-border"
                              {...field}
                            />
                          </FormControl>
                          <FormMessage />
                        </FormItem>
                      )}
                    />
                  </div>

                  <div className="flex justify-end">
                    <Button 
                      type="submit" 
                      className="bg-primary hover:bg-primary/90"
                      disabled={!selectedProductId || !selectedPurchaseOrderId || !!quantityError || createOrderMutation.isPending}
                    >
                      {createOrderMutation.isPending ? "Criando..." : "Criar Pedido"}
                    </Button>
                  </div>
                </form>
              </Form>
            </DialogContent>
          </Dialog>
        )}
      </div>

      {/* Filters */}
      <div className="flex flex-col md:flex-row gap-4">
        <div className="flex-1">
          <div className="relative">
            <Search className="absolute left-2 top-1/2 transform -translate-y-1/2 text-muted-foreground" size={18} />
            <Input
              placeholder="Buscar pedidos..."
              className="pl-9 bg-input border-border"
              value={searchTerm}
              onChange={(e) => setSearchTerm(e.target.value)}
            />
          </div>
        </div>
        <div className="flex items-center gap-2">
          <Label htmlFor="status-filter" className="whitespace-nowrap">Filtrar por:</Label>
          <Select value={statusFilter} onValueChange={setStatusFilter}>
            <SelectTrigger id="status-filter" className="w-[180px] bg-input border-border">
              <SelectValue placeholder="Todos os status" />
            </SelectTrigger>
            <SelectContent>
              <SelectItem value="all">Todos os status</SelectItem>
              {statusOptions.map((status) => (
                <SelectItem key={status} value={status}>
                  {status}
                </SelectItem>
              ))}
            </SelectContent>
          </Select>
        </div>
      </div>

      {/* Orders List */}
      <Card>
        <CardHeader className="py-4">
          <CardTitle>Pedidos</CardTitle>
        </CardHeader>
        <CardContent>
          {isLoading ? (
            <div className="flex justify-center items-center py-8">
              <p>Carregando pedidos...</p>
            </div>
          ) : filteredOrders.length === 0 ? (
            <div className="flex flex-col items-center justify-center py-8 text-center">
              <FileText className="h-12 w-12 text-muted-foreground mb-4" />
              <h3 className="text-lg font-medium">Nenhum pedido encontrado</h3>
              <p className="text-muted-foreground mt-1">
                Não foram encontrados pedidos com os filtros aplicados.
              </p>
            </div>
          ) : (
            <div className="overflow-x-auto">
              <Table>
                <TableHeader>
                  <TableRow>
                    <TableHead>ID</TableHead>
                    <TableHead>Produto</TableHead>
                    <TableHead>Quantidade</TableHead>
                    <TableHead>Fornecedor</TableHead>
                    <TableHead>Local de Entrega</TableHead>
                    <TableHead>Data de Entrega</TableHead>
                    <TableHead>Status</TableHead>
                  </TableRow>
                </TableHeader>
                <TableBody>
                  {filteredOrders.map((order) => {
                    const product = products.find(p => p.id === order.productId);
                    const company = companies.find(c => c.id === order.supplierId);
                    
                    return (
                      <TableRow 
                        key={order.id} 
                        className="cursor-pointer hover:bg-muted/50"
                        onClick={() => setSelectedOrder(order)}
                      >
                        <TableCell className="font-medium">{order.orderId}</TableCell>
                        <TableCell>{product?.name || "N/A"}</TableCell>
                        <TableCell>{order.quantity}</TableCell>
                        <TableCell>{company?.name || "N/A"}</TableCell>
                        <TableCell>{order.workLocation}</TableCell>
                        <TableCell>{formatDate(order.deliveryDate)}</TableCell>
                        <TableCell>
                          <Badge className={getStatusColor(order.status)}>
                            {order.status}
                          </Badge>
                          {order.isUrgent && (
                            <Badge variant="destructive" className="ml-2">
                              <AlertTriangle size={12} className="mr-1" />
                              Urgente
                            </Badge>
                          )}
                        </TableCell>
                      </TableRow>
                    );
                  })}
                </TableBody>
              </Table>
            </div>
          )}
        </CardContent>
      </Card>
    </div>
  );
}